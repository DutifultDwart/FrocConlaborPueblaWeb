@{
    ViewData["Title"] = "Iniciar Sesión";
}


<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg">
            <div class="card-header text-white text-center" style="background-color: #007A78;">
                <h4><i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión</h4>
            </div>
            <div class="card-body">
                <form id="loginForm">
                    <div class="mb-3">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        <div class="input-group">
                            <span class="input-group-text" style="background-color: #f0f0f0;"><i class="bi bi-envelope"></i></span>
                            <input type="email" class="form-control" id="email" placeholder="usuario@dominio.com" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Contraseña</label>
                        <div class="input-group">
                            <span class="input-group-text" style="background-color: #f0f0f0;"><i class="bi bi-lock"></i></span>
                            <input type="password" class="form-control" id="password" placeholder="Ingresa tu contraseña" required>
                            <button class="btn btn-outline-secondary" type="button" id="togglePassword" style="border-color: #ced4da;">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn text-white" style="background-color: #007A78;">
                            <i class="bi bi-box-arrow-in-right"></i> Ingresar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .btn-outline-secondary:hover {
            background-color: #f8f9fa;
        }

        .card {
            border-color: rgba(0, 122, 120, 0.1);
        }

        .form-control:focus {
            border-color: #007A78;
            box-shadow: 0 0 0 0.25rem rgba(0, 122, 120, 0.25);
        }
    </style>
}

@section Scripts {
    <script src="~/js/login.js"></script>
}