@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/style.css">
}

<main class="container">
    <section class="hero">
        <img src="https://picsum.photos/800/400" alt="Actividad Sindical">
        <h1>¡Únete al Movimiento Estudiantil!</h1>
        <p>Trabajando por tus derechos y beneficios en la universidad.</p>
        <a href="#inscripcion" class="cta-button">Conviértete en Miembro</a>
    </section>

    <section class="news-grid">
        <article class="news-card">
            <img src="https://picsum.photos/400/200" alt="Asamblea General">
            <div class="news-content">
                <h2>Próxima Asamblea General</h2>
                <p>Discutiendo mejoras en las instalaciones deportivas y nuevos programas académicos.</p>
                <span class="date">20 de Febrero, 14:00 hrs.</span>
            </div>
        </article>

        <article class="news-card">
            <img src="https://picsum.photos/401/200" alt="Beneficio Estudiantil">
            <div class="news-content">
                <h2>Nuevos Beneficios para Socios</h2>
                <p>Lanzamos programa de descuentos exclusivos en tiendas universitarias.</p>
                <span class="date">Publicado: 15 Feb</span>
            </div>
        </article>

        <article class="news-card">
            <img src="https://picsum.photos/402/200" alt="Actividad Cultural">
            <div class="news-content">
                <h2>Semana Cultural Universitaria</h2>
                <p>Organizamos talleres gratuitos y exposiciones estudiantiles.</p>
                <span class="date">Del 15 al 19 de Marzo</span>
            </div>
        </article>
    </section>

    <section class="calls-to-action">
        <div class="cta-box">
            <h3>¿Qué Ofrecemos?</h3>
            <ul>
                <li>Asesoría académica gratuita</li>
                <li>Descuentos exclusivos</li>
                <li>Acceso a eventos culturales</li>
                <li>Audiencias con autoridades</li>
            </ul>
        </div>

        <div class="cta-box">
            <h3>Únete Ahora</h3>
            <p></p>
            <p></p>
            <a href="#inscripcion" class="cta-button">Inscribirse</a>
        </div>
    </section>
</main>

