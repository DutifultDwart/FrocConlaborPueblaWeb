<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inicio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FrocConlaborPueblaWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    @RenderSection("styles", required: false)
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #FFCE4B;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logos/logo1.png" class="logo-img" alt="Logo 1" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon">
                        <i class="fas fa-bars"></i>
                    </span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="conoceAlSIUTP" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Conoce a ST UTP
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="conoceAlSIUTP">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="STUTP">ST UTP</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="noticias">Noticias</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Colaboradores">Conoce a nuestros integrantes</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Prensa">Comunicados y prensa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Test">Convenios</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="conoceAlSIUTP" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Contratos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="conoceAlSIUTP">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="ContratoColectivo">Contrato colectivo</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Test">Resumen del contrato colectivo</a></li>
                            </ul>
                        </li>
                    </ul>

                    <div class="d-none d-sm-block">
                        <a class="btn btn-outline-primary me-3" asp-area="" asp-controller="Home" asp-action="Login">
                            Registrarse
                        </a>
                    </div>

                    <div class="d-block d-sm-none">
                        <a class="btn btn-outline-primary w-100 mb-2" asp-area="" asp-controller="Home" asp-action="Login">
                            Registrarse
                        </a>
                    </div>
                </div>

                <div class="d-flex align-items-center ms-auto"> 
                    <a class="navbar-brand me-3" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/img/logos/logo2.png" class="logo-img" alt="Logo 2" />
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ST UTP, Afiliado a Froc Conlabor Puebla SNPALM
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>